---
import Layout from "@/layouts/Layout.astro";

// SEO Data
const seoTitle =
  "Kontakt – Akademia Piłkarska Unia Toruń | Treningi piłkarskie";
const seoDescription =
  "Skontaktuj się z Akademią Piłkarską Unia Toruń. Adres, telefon, email i formularz kontaktowy. Odpowiadamy w ciągu 24 godzin!";
const seoKeywords = [
  "kontakt Unia Toruń",
  "akademia piłkarska Toruń kontakt",
  "telefon szkółka piłkarska Toruń",
  "treningi piłkarskie Toruń kontakt",
];

// Dane firmy
const companyData = {
  name: "KLUB SPORTOWY TORUŃ SPÓŁKA AKCYJNA",
  shortName: "Unia Toruń",
  address: "ul. Pera Jonssona 7",
  city: "87-100 Toruń",
  phone: "+48 517 740 146",
  phoneRaw: "+48517740146",
  email: "ksuniatorun@gmail.com",
  nip: "9562186291",
};

// Social media
const socialLinks = [
  {
    name: "Facebook",
    href: "https://facebook.com/apuniatorun",
    icon: "facebook",
  },
];
---

<Layout title={seoTitle} description={seoDescription} keywords={seoKeywords}>
  <!-- Hero Section -->
  <section
    class="relative py-16 md:py-20 overflow-hidden bg-gradient-to-br from-dark-900 via-dark-950 to-primary-950"
  >
    <div class="absolute inset-0 football-pattern opacity-50"></div>
    <div
      class="absolute top-20 right-10 w-72 h-72 bg-primary-500/20 rounded-full blur-3xl animate-pulse-glow"
    >
    </div>
    <div
      class="absolute bottom-20 left-10 w-96 h-96 bg-primary-600/10 rounded-full blur-3xl"
    >
    </div>

    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <nav
          class="flex items-center justify-center gap-2 text-dark-400 text-sm mb-6"
        >
          <a href="/" class="hover:text-white transition-colors"
            >Strona główna</a
          >
          <svg
            class="w-4 h-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-white">Kontakt</span>
        </nav>

        <h1 class="text-white mb-6 animate-fade-in-up">
          <span class="gradient-text">Skontaktuj się</span> z nami
        </h1>

        <p
          class="text-xl md:text-2xl text-dark-300 mb-8 leading-relaxed animate-fade-in-up animation-delay-200 max-w-3xl mx-auto"
        >
          Masz pytania? Chętnie odpowiemy! Zadzwoń, napisz lub wypełnij
          formularz – <strong class="text-white"
            >odpowiadamy w ciągu 24 godzin</strong
          >.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info Cards -->
  <section
    class="py-12 bg-white dark:bg-dark-900 border-b border-dark-100 dark:border-dark-800"
  >
    <div class="container-custom">
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Phone -->
        <a
          href={`tel:${companyData.phoneRaw}`}
          class="card p-6 text-center group hover:shadow-xl transition-all"
        >
          <div
            class="w-14 h-14 rounded-xl bg-primary-100 dark:bg-primary-900/50 flex items-center justify-center mx-auto mb-4 group-hover:bg-primary-500 transition-colors"
          >
            <svg
              class="w-6 h-6 text-primary-600 dark:text-primary-400 group-hover:text-white transition-colors"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
          <h3 class="font-display font-bold text-dark-900 dark:text-white mb-1">
            Telefon
          </h3>
          <p
            class="text-primary-600 dark:text-primary-400 font-semibold text-lg"
          >
            {companyData.phone}
          </p>
        </a>

        <!-- Email -->
        <a
          href={`mailto:${companyData.email}`}
          class="card p-6 text-center group hover:shadow-xl transition-all"
        >
          <div
            class="w-14 h-14 rounded-xl bg-primary-100 dark:bg-primary-900/50 flex items-center justify-center mx-auto mb-4 group-hover:bg-primary-500 transition-colors"
          >
            <svg
              class="w-6 h-6 text-primary-600 dark:text-primary-400 group-hover:text-white transition-colors"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <h3 class="font-display font-bold text-dark-900 dark:text-white mb-1">
            Email
          </h3>
          <p class="text-primary-600 dark:text-primary-400 font-semibold">
            {companyData.email}
          </p>
        </a>

        <!-- Address -->
        <div class="card p-6 text-center">
          <div
            class="w-14 h-14 rounded-xl bg-primary-100 dark:bg-primary-900/50 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-6 h-6 text-primary-600 dark:text-primary-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="font-display font-bold text-dark-900 dark:text-white mb-1">
            Adres
          </h3>
          <p class="text-dark-600 dark:text-dark-300">
            {companyData.address}, Toruń
          </p>
        </div>

        <!-- Social -->
        <div class="card p-6 text-center">
          <div
            class="w-14 h-14 rounded-xl bg-primary-100 dark:bg-primary-900/50 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              class="w-6 h-6 text-primary-600 dark:text-primary-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
              ></path>
            </svg>
          </div>
          <h3 class="font-display font-bold text-dark-900 dark:text-white mb-2">
            Social Media
          </h3>
          <div class="flex items-center justify-center gap-3">
            <a
              href="https://facebook.com/apuniatorun"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-lg bg-dark-100 dark:bg-dark-800 hover:bg-primary-500 flex items-center justify-center transition-colors group"
            >
              <svg
                class="w-5 h-5 text-dark-600 dark:text-dark-400 group-hover:text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section-padding bg-dark-50 dark:bg-dark-950">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="card p-8">
          <h2
            class="text-2xl font-display font-bold text-dark-900 dark:text-white mb-2"
          >
            Napisz do nas
          </h2>
          <p class="text-dark-600 dark:text-dark-400 mb-6">
            Wypełnij formularz, a odpowiemy najszybciej jak to możliwe.
          </p>

          <form id="contact-form" class="space-y-5">
            <div class="grid sm:grid-cols-2 gap-4">
              <div>
                <label
                  for="name"
                  class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-2"
                >
                  Imię i nazwisko *
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-dark-200 dark:border-dark-700 bg-white dark:bg-dark-800 text-dark-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                  placeholder="Jan Kowalski"
                />
              </div>
              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-2"
                >
                  Adres email *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-dark-200 dark:border-dark-700 bg-white dark:bg-dark-800 text-dark-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                  placeholder="jan@email.com"
                />
              </div>
            </div>

            <div>
              <label
                for="subject"
                class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-2"
              >
                Temat *
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-xl border border-dark-200 dark:border-dark-700 bg-white dark:bg-dark-800 text-dark-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
              >
                <option value="">Wybierz temat</option>
                <option value="Pytanie o treningi">Pytanie o treningi</option>
                <option value="Cennik i opłaty">Cennik i opłaty</option>
                <option value="Harmonogram zajęć">Harmonogram zajęć</option>
                <option value="Współpraca">Współpraca / Sponsoring</option>
                <option value="Inne">Inne</option>
              </select>
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-2"
              >
                Wiadomość *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 rounded-xl border border-dark-200 dark:border-dark-700 bg-white dark:bg-dark-800 text-dark-900 dark:text-white focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all resize-none"
                placeholder="Jak możemy Ci pomóc?"></textarea>
            </div>

            <label class="flex items-start gap-3 cursor-pointer">
              <input
                type="checkbox"
                name="consent"
                required
                class="mt-1 w-5 h-5 rounded border-dark-300 text-primary-500 focus:ring-primary-500"
              />
              <span class="text-sm text-dark-600 dark:text-dark-400">
                Wyrażam zgodę na przetwarzanie danych osobowych w celu
                odpowiedzi na zapytanie zgodnie z <a
                  href="/polityka-prywatnosci"
                  class="text-primary-500 hover:underline"
                  >Polityką Prywatności</a
                >. *
              </span>
            </label>

            <button
              type="submit"
              id="submit-btn"
              class="w-full btn-primary py-3"
            >
              <span id="btn-text">Wyślij wiadomość</span>
              <svg
                id="btn-spinner"
                class="hidden animate-spin h-5 w-5"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
              >
                <circle
                  class="opacity-25"
                  cx="12"
                  cy="12"
                  r="10"
                  stroke="currentColor"
                  stroke-width="4"></circle>
                <path
                  class="opacity-75"
                  fill="currentColor"
                  d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                ></path>
              </svg>
            </button>

            <!-- Status Messages -->
            <div
              id="form-success"
              class="hidden p-4 rounded-xl bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-center"
            >
              <svg
                class="w-10 h-10 mx-auto mb-2 text-green-500"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="font-semibold">Wiadomość wysłana!</p>
              <p class="text-sm mt-1">Odpowiemy najszybciej jak to możliwe.</p>
            </div>

            <div
              id="form-error"
              class="hidden p-4 rounded-xl bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 text-center"
            >
              <svg
                class="w-10 h-10 mx-auto mb-2 text-red-500"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <p class="font-semibold">Wystąpił błąd</p>
              <p class="text-sm mt-1">
                Spróbuj ponownie lub zadzwoń: <a
                  href="tel:+48517740146"
                  class="underline">517 740 146</a
                >
              </p>
            </div>
          </form>
        </div>

        <!-- Map & Company Info -->
        <div class="space-y-6">
          <!-- Map Placeholder -->
          <div class="card overflow-hidden">
            <div class="aspect-video bg-dark-100 dark:bg-dark-800 relative">
              <!-- Google Maps Embed - zamień na właściwy adres -->
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2434.5!2d18.5983!3d53.0138!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTPCsDAwJzQ5LjciTiAxOMKwMzUnNTMuOSJF!5e0!3m2!1spl!2spl!4v1234567890"
                width="100%"
                height="100%"
                style="border:0; position: absolute; top: 0; left: 0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
              <!-- Fallback jeśli mapa nie działa -->
              <div
                class="absolute inset-0 flex items-center justify-center bg-dark-100 dark:bg-dark-800"
              >
                <div class="text-center">
                  <svg
                    class="w-16 h-16 mx-auto text-dark-400 mb-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <p class="text-dark-500 dark:text-dark-400 font-medium">
                    {companyData.address}
                  </p>
                  <p class="text-dark-500 dark:text-dark-400">
                    {companyData.city}
                  </p>
                  <a
                    href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(companyData.address + ", " + companyData.city)}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 mt-4 text-primary-500 hover:text-primary-600 font-medium"
                  >
                    Otwórz w Google Maps
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      ></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Company Details -->
          <div class="card p-6">
            <h3
              class="text-lg font-display font-bold text-dark-900 dark:text-white mb-4"
            >
              Dane firmy
            </h3>
            <div class="space-y-3 text-sm">
              <div
                class="flex justify-between py-2 border-b border-dark-100 dark:border-dark-800"
              >
                <span class="text-dark-500 dark:text-dark-400">Nazwa</span>
                <span
                  class="text-dark-900 dark:text-white font-medium text-right"
                  >{companyData.name}</span
                >
              </div>
              <div
                class="flex justify-between py-2 border-b border-dark-100 dark:border-dark-800"
              >
                <span class="text-dark-500 dark:text-dark-400">Adres</span>
                <span
                  class="text-dark-900 dark:text-white font-medium text-right"
                  >{companyData.address}, {companyData.city}</span
                >
              </div>
              <div
                class="flex justify-between py-2 border-b border-dark-100 dark:border-dark-800"
              >
                <span class="text-dark-500 dark:text-dark-400">NIP</span>
                <span class="text-dark-900 dark:text-white font-medium"
                  >{companyData.nip}</span
                >
              </div>
              <div
                class="flex justify-between py-2 border-b border-dark-100 dark:border-dark-800"
              >
                <span class="text-dark-500 dark:text-dark-400">Telefon</span>
                <a
                  href={`tel:${companyData.phoneRaw}`}
                  class="text-primary-600 dark:text-primary-400 font-medium hover:underline"
                  >{companyData.phone}</a
                >
              </div>
              <div class="flex justify-between py-2">
                <span class="text-dark-500 dark:text-dark-400">Email</span>
                <a
                  href={`mailto:${companyData.email}`}
                  class="text-primary-600 dark:text-primary-400 font-medium hover:underline"
                  >{companyData.email}</a
                >
              </div>
            </div>
          </div>

          <!-- CTA Box -->
          <div
            class="card p-6 bg-gradient-to-br from-primary-500 to-primary-600 text-white"
          >
            <h3 class="text-lg font-display font-bold mb-2">
              Chcesz zapisać dziecko?
            </h3>
            <p class="text-primary-100 mb-4">
              Skorzystaj z formularza zapisów – odpowiemy w ciągu 24 godzin!
            </p>
            <a
              href="/zapisy"
              class="btn bg-white text-primary-600 hover:bg-primary-50 w-full justify-center"
            >
              Formularz zapisów
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
  const btnText = document.getElementById("btn-text") as HTMLElement;
  const btnSpinner = document.getElementById("btn-spinner") as HTMLElement;
  const successMsg = document.getElementById("form-success") as HTMLElement;
  const errorMsg = document.getElementById("form-error") as HTMLElement;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Show loading state
    submitBtn.disabled = true;
    btnText.textContent = "Wysyłanie...";
    btnSpinner.classList.remove("hidden");
    successMsg.classList.add("hidden");
    errorMsg.classList.add("hidden");

    const formData = new FormData(form);

    try {
      const response = await fetch(
        "https://4xz7pkbd51.execute-api.eu-north-1.amazonaws.com/prod/send",
        {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            name: formData.get("name"),
            email: formData.get("email"),
            subject: `[Kontakt] ${formData.get("subject")}`,
            message: formData.get("message"),
            domain: "uniatorun.pl",
          }),
        }
      );

      if (response.ok) {
        form.reset();
        successMsg.classList.remove("hidden");
      } else {
        throw new Error("Błąd wysyłania");
      }
    } catch (error) {
      errorMsg.classList.remove("hidden");
    } finally {
      submitBtn.disabled = false;
      btnText.textContent = "Wyślij wiadomość";
      btnSpinner.classList.add("hidden");
    }
  });
</script>
