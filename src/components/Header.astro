---
const navigation = [  
  { name: 'Akademia', href: '/akademia-pilkarska-torun' },
  { 
    name: 'Treningi', 
    href: '/treningi-pilkarskie-dla-dzieci',
    children: [
      { name: 'Przedszkole (3-6 lat)', href: '/treningi-pilkarskie-dla-dzieci/3-6-lat' },
      { name: 'Żak U-9 (7-9 lat)', href: '/treningi-pilkarskie-dla-dzieci/7-9-lat' },
      { name: 'Orlik U-11 (9-11 lat)', href: '/treningi-pilkarskie-dla-dzieci/9-11-lat' },
      { name: 'Młodzik U-13 (11-13 lat)', href: '/treningi-pilkarskie-dla-dzieci/11-13-lat' },
    ]
  },
  { name: 'Trenerzy', href: '/trenerzy' },
  { name: 'Plan zajęć', href: '/plan-zajec' },
  { name: 'Cennik', href: '/cennik' },
  { name: 'Galeria', href: '/galeria' },
  { name: 'Kontakt', href: '/kontakt' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 glass border-b border-dark-100 dark:border-dark-800">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 hover-lift">
        <div class="w-10 h-10 md:w-12 md:h-12 rounded-xl gradient-bg flex items-center justify-center">
          <!-- Placeholder for logo - replace src with actual logo -->
          <img 
            src="/logo.svg" 
            alt="Unia Toruń Logo" 
            class="w-8 h-8 md:w-10 md:h-10 object-contain"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
          />
          <span class="hidden text-white font-display font-bold text-xl">U</span>
        </div>
        <div class="hidden sm:block">
          <span class="font-display font-bold text-lg md:text-xl text-dark-900 dark:text-white">
            Unia Toruń
          </span>
          <span class="block text-xs text-dark-500 dark:text-dark-400 font-medium -mt-0.5">
            Chłopięca szkółka piłkarska
          </span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-1">
        {navigation.map((item) => (
          <div class="relative group">
            <a 
              href={item.href}
              class:list={[
                'px-4 py-2 rounded-lg font-medium text-sm transition-all duration-200',
                currentPath === item.href || currentPath.startsWith(item.href + '/')
                  ? 'text-primary-600 bg-primary-50 dark:text-primary-400 dark:bg-primary-950'
                  : 'text-dark-600 hover:text-primary-600 hover:bg-dark-50 dark:text-dark-300 dark:hover:text-primary-400 dark:hover:bg-dark-800'
              ]}
            >
              {item.name}
              {item.children && (
                <svg class="inline-block ml-1 w-4 h-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>
            
            {item.children && (
              <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <div class="bg-white dark:bg-dark-900 rounded-xl shadow-xl border border-dark-100 dark:border-dark-800 py-2 min-w-[220px]">
                  {item.children.map((child) => (
                    <a 
                      href={child.href}
                      class:list={[
                        'block px-4 py-2.5 text-sm transition-colors',
                        currentPath === child.href
                          ? 'text-primary-600 bg-primary-50 dark:text-primary-400 dark:bg-primary-950'
                          : 'text-dark-600 hover:text-primary-600 hover:bg-dark-50 dark:text-dark-300 dark:hover:text-primary-400 dark:hover:bg-dark-800'
                      ]}
                    >
                      {child.name}
                    </a>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- Right side: Theme Toggle + CTA + Mobile Menu -->
      <div class="flex items-center gap-3">
        <!-- Theme Toggle -->
        <button 
          id="theme-toggle"
          type="button"
          class="relative w-14 h-8 rounded-full bg-dark-100 dark:bg-dark-800 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-900"
          aria-label="Przełącz motyw"
        >
          <span class="sr-only">Przełącz motyw jasny/ciemny</span>
          <!-- Toggle circle -->
          <span 
            id="toggle-circle"
            class="absolute top-1 left-1 w-6 h-6 rounded-full bg-white shadow-md transition-all duration-300 flex items-center justify-center dark:translate-x-6 dark:bg-dark-700"
          >
            <!-- Sun icon (light mode) -->
            <svg 
              class="w-4 h-4 text-amber-500 transition-opacity duration-300 dark:opacity-0" 
              fill="currentColor" 
              viewBox="0 0 20 20"
            >
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
            </svg>
            <!-- Moon icon (dark mode) -->
            <svg 
              class="w-4 h-4 text-primary-400 absolute opacity-0 transition-opacity duration-300 dark:opacity-100" 
              fill="currentColor" 
              viewBox="0 0 20 20"
            >
              <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
            </svg>
          </span>
        </button>

        <!-- CTA Button (Desktop) -->
        <a href="/zapisy" class="hidden md:inline-flex btn-primary text-sm !py-2.5 !px-5">
          Zapisz dziecko
        </a>

        <!-- Mobile Menu Button -->
        <button 
          id="mobile-menu-button"
          type="button"
          class="lg:hidden p-2 rounded-lg text-dark-600 hover:bg-dark-100 dark:text-dark-300 dark:hover:bg-dark-800 transition-colors"
          aria-label="Menu"
          aria-expanded="false"
        >
          <svg id="menu-icon-open" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div 
      id="mobile-menu" 
      class="lg:hidden hidden overflow-hidden transition-all duration-300"
    >
      <div class="py-4 space-y-1 border-t border-dark-100 dark:border-dark-800">
        {navigation.map((item) => (
          <div>
            <a 
              href={item.href}
              class:list={[
                'block px-4 py-3 rounded-lg font-medium transition-colors',
                currentPath === item.href || currentPath.startsWith(item.href + '/')
                  ? 'text-primary-600 bg-primary-50 dark:text-primary-400 dark:bg-primary-950'
                  : 'text-dark-600 hover:text-primary-600 hover:bg-dark-50 dark:text-dark-300 dark:hover:text-primary-400 dark:hover:bg-dark-800'
              ]}
            >
              {item.name}
            </a>
            {item.children && (
              <div class="ml-4 mt-1 space-y-1">
                {item.children.map((child) => (
                  <a 
                    href={child.href}
                    class:list={[
                      'block px-4 py-2 rounded-lg text-sm transition-colors',
                      currentPath === child.href
                        ? 'text-primary-600 bg-primary-50 dark:text-primary-400 dark:bg-primary-950'
                        : 'text-dark-500 hover:text-primary-600 hover:bg-dark-50 dark:text-dark-400 dark:hover:text-primary-400 dark:hover:bg-dark-800'
                    ]}
                  >
                    {child.name}
                  </a>
                ))}
              </div>
            )}
          </div>
        ))}
        
        <!-- Mobile CTA -->
        <div class="pt-4 px-4">
          <a href="/zapisy" class="btn-primary w-full text-center">
            Zapisz dziecko na trening
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16 md:h-20"></div>

<script>
  // Theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  
  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });

  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIconOpen = document.getElementById('menu-icon-open');
  const menuIconClose = document.getElementById('menu-icon-close');

  mobileMenuButton?.addEventListener('click', () => {
    const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
    
    mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.classList.toggle('hidden');
    menuIconOpen?.classList.toggle('hidden');
    menuIconClose?.classList.toggle('hidden');
  });

  // Close mobile menu on resize
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 1024) {
      mobileMenu?.classList.add('hidden');
      mobileMenuButton?.setAttribute('aria-expanded', 'false');
      menuIconOpen?.classList.remove('hidden');
      menuIconClose?.classList.add('hidden');
    }
  });
</script>