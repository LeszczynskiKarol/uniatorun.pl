  },
];
---

<footer class="bg-dark-900 dark:bg-dark-950 text-white">
  <!-- Main Footer -->
  <div class="container-custom py-16 md:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-10 lg:gap-6">
      <!-- Brand Column -->
      <div class="lg:col-span-1 md:col-span-2 lg:col-span-1">
        <a href="/" class="inline-flex items-center gap-3 mb-6 hover-lift">
          <div class="w-12 h-12 rounded-xl gradient-bg flex items-center justify-center">
            <img 
              src="/logo.svg" 
              alt="Unia Toruń Logo" 
              class="w-10 h-10 object-contain"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <span class="hidden text-white font-display font-bold text-2xl">U</span>
          </div>
          <div>
            <span class="font-display font-bold text-xl text-white">Unia Toruń</span>
            <span class="block text-xs text-dark-400 font-medium">Akademia Piłkarska</span>
          </div>
        </a>
        
        <p class="text-dark-400 text-sm leading-relaxed mb-6">
          <strong class="text-white">Szkółka piłkarska dla dzieci w Toruniu.</strong> Profesjonalne treningi piłkarskie dla młodych zawodników w wieku od 3 do 13 lat. Dołącz do najlepszej akademii piłkarskiej w regionie!
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-3">
          {socialLinks.map((social) => (
            <a 
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-lg bg-dark-800 hover:bg-primary-500 flex items-center justify-center transition-all duration-300 hover:-translate-y-1"
              aria-label={social.name}
              set:html={social.icon}
            />
          ))}
        </div>
      </div>

      <!-- Akademia Links -->
      <div>
        <h3 class="font-display font-bold text-lg mb-5">Akademia</h3>
        <ul class="space-y-3">
          {footerLinks.akademia.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-dark-400 hover:text-primary-400 transition-colors text-sm inline-flex items-center gap-2 group"
              >
                <span class="w-1.5 h-1.5 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Treningi Links -->
      <div>
        <h3 class="font-display font-bold text-lg mb-5">Treningi piłkarskie</h3>
        <ul class="space-y-3">
          {footerLinks.treningi.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-dark-400 hover:text-primary-400 transition-colors text-sm inline-flex items-center gap-2 group"
              >
                <span class="w-1.5 h-1.5 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Oferta Links -->
      <div>
        <h3 class="font-display font-bold text-lg mb-5">Oferta</h3>
        <ul class="space-y-3">
          {footerLinks.oferta.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-dark-400 hover:text-primary-400 transition-colors text-sm inline-flex items-center gap-2 group"
              >
                <span class="w-1.5 h-1.5 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-display font-bold text-lg mb-5">Kontakt</h3>
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <div class="w-10 h-10 rounded-lg bg-dark-800 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <span class="text-dark-400 text-sm block">Adres</span>
              <span class="text-white text-sm">Toruń, ul. Sportowa 1</span>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <div class="w-10 h-10 rounded-lg bg-dark-800 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <span class="text-dark-400 text-sm block">Telefon</span>
              <a href="tel:+48123456789" class="text-white text-sm hover:text-primary-400 transition-colors">
                +48 123 456 789
              </a>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <div class="w-10 h-10 rounded-lg bg-dark-800 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <span class="text-dark-400 text-sm block">Email</span>
              <a href="mailto:kontakt@unia-torun.pl" class="text-white text-sm hover:text-primary-400 transition-colors">
                kontakt@unia-torun.pl
              </a>
            </div>
          </li>
        </ul>

        <!-- Quick Links -->
        <div class="mt-6 space-y-2">
          {footerLinks.kontakt.map((link) => (
            <a 
              href={link.href}
              class="text-dark-400 hover:text-primary-400 transition-colors text-sm block"
            >
              → {link.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-dark-800">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-dark-500 text-sm text-center md:text-left">
          © {currentYear} <strong class="text-dark-400">Unia Toruń</strong> – Akademia Piłkarska. Wszystkie prawa zastrzeżone.
        </p>
        <div class="flex items-center gap-6">
          <a href="/polityka-prywatnosci" class="text-dark-500 hover:text-dark-300 text-sm transition-colors">
            Polityka prywatności
          </a>
          <a href="/regulamin" class="text-dark-500 hover:text-dark-300 text-sm transition-colors">
            Regulamin
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>