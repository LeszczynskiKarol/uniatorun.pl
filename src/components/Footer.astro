---
const currentYear = new Date().getFullYear();

const footerLinks = {
  akademia: [
    { name: "O akademii", href: "/akademia-pilkarska-torun" },
    //{ name: "Nasi trenerzy", href: "/trenerzy" },
    { name: "Plan zajęć", href: "/plan-zajec" },
    { name: "Lokalizacja", href: "/lokalizacja" },
    //{ name: "Aktualności", href: "/aktualnosci" },
  ],
  treningi: [
    { name: "Wszystkie grupy", href: "/treningi-pilkarskie-dla-dzieci" },
    {
      name: "Przedszkole (3-6 lat)",
      href: "/treningi-pilkarskie-dla-dzieci/3-6-lat",
    },
    {
      name: "Żak U-9 (7-9 lat)",
      href: "/treningi-pilkarskie-dla-dzieci/7-9-lat",
    },
    {
      name: "Orlik U-11 (9-11 lat)",
      href: "/treningi-pilkarskie-dla-dzieci/9-11-lat",
    },
    {
      name: "Młodzik U-13 (11-13 lat)",
      href: "/treningi-pilkarskie-dla-dzieci/11-13-lat",
    },
  ],
  oferta: [
    { name: "Zajęcia piłkarskie", href: "/zajecia-pilkarskie-dla-dzieci" },
    { name: "Klub piłkarski", href: "/klub-pilkarski-dla-dzieci" },
    { name: "Nauka gry w piłkę", href: "/nauka-gry-w-pilke" },
  ],
  kontakt: [
    { name: "Formularz kontaktowy", href: "/kontakt" },
    { name: "Zapisy online", href: "/zapisy" },
    //{ name: "Galeria", href: "/galeria" },
  ],
};

const socialLinks = [
  {
    name: "Facebook",
    href: "https://facebook.com/uniatorun",
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>`,
  },
];
---

<footer class="bg-dark-900 dark:bg-dark-950 text-white">
  <!-- Main Footer -->
  <div class="container-custom py-16 md:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-10 lg:gap-6">
      <!-- Brand Column -->
      <div class="lg:col-span-1 md:col-span-2 lg:col-span-1">
        <a href="/" class="inline-flex items-center gap-3 mb-6 hover-lift">
          <div
            class="w-12 h-12 rounded-xl gradient-bg flex items-center justify-center"
          >
            <img
              src="/logo.svg"
              alt="Unia Toruń Logo"
              class="w-10 h-10 object-contain"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <span class="hidden text-white font-display font-bold text-2xl"
              >U</span
            >
          </div>
          <div>
            <span class="font-display font-bold text-xl text-white"
              >Unia Toruń</span
            >
            <span class="block text-xs text-dark-400 font-medium"
              >Akademia Piłkarska</span
            >
          </div>
        </a>

        <p class="text-dark-400 text-sm leading-relaxed mb-6">
          <strong class="text-white"
            >Szkółka piłkarska dla dzieci w Toruniu.</strong
          > Profesjonalne treningi piłkarskie dla młodych zawodników w wieku od 3
          do 13 lat. Dołącz do najlepszej akademii piłkarskiej w regionie!
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-3">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-lg bg-dark-800 hover:bg-primary-500 flex items-center justify-center transition-all duration-300 hover:-translate-y-1"
                aria-label={social.name}
                set:html={social.icon}
              />
            ))
          }
        </div>
      </div>

      <!-- Akademia Links -->
      <div>
        <h3 class="font-display font-bold text-lg mb-5">Akademia</h3>
        <ul class="space-y-3">
          {
            footerLinks.akademia.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-dark-400 hover:text-primary-400 transition-colors text-sm inline-flex items-center gap-2 group"
                >
                  <span class="w-1.5 h-1.5 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity" />
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Treningi Links -->
      <div>
        <h3 class="font-display font-bold text-lg mb-5">Treningi piłkarskie</h3>
        <ul class="space-y-3">
          {
            footerLinks.treningi.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-dark-400 hover:text-primary-400 transition-colors text-sm inline-flex items-center gap-2 group"
                >
                  <span class="w-1.5 h-1.5 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity" />
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Oferta Links -->
      <div>
        <h3 class="font-display font-bold text-lg mb-5">Oferta</h3>
        <ul class="space-y-3">
          {
            footerLinks.oferta.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-dark-400 hover:text-primary-400 transition-colors text-sm inline-flex items-center gap-2 group"
                >
                  <span class="w-1.5 h-1.5 rounded-full bg-primary-500 opacity-0 group-hover:opacity-100 transition-opacity" />
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-display font-bold text-lg mb-5">Kontakt</h3>
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <div
              class="w-10 h-10 rounded-lg bg-dark-800 flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-5 h-5 text-primary-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <span class="text-dark-400 text-sm block">Adres</span>
              <span class="text-white text-sm"
                >ul. Pera Jonssona 7, 87-100 Toruń</span
              >
            </div>
          </li>
          <li class="flex items-start gap-3">
            <div
              class="w-10 h-10 rounded-lg bg-dark-800 flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-5 h-5 text-primary-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div>
              <span class="text-dark-400 text-sm block">Telefon</span>
              <a
                href="tel:+48517740146"
                class="text-white text-sm hover:text-primary-400 transition-colors"
              >
                517 740 146
              </a>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <div
              class="w-10 h-10 rounded-lg bg-dark-800 flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-5 h-5 text-primary-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div>
              <span class="text-dark-400 text-sm block">Email</span>
              <a
                href="mailto:ksuniatorun@gmail.com"
                class="text-white text-sm hover:text-primary-400 transition-colors"
              >
                ksuniatorun@gmail.com
              </a>
            </div>
          </li>
        </ul>

        <!-- Quick Links -->
        <div class="mt-6 space-y-2">
          {
            footerLinks.kontakt.map((link) => (
              <a
                href={link.href}
                class="text-dark-400 hover:text-primary-400 transition-colors text-sm block"
              >
                → {link.name}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-dark-800">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-dark-500 text-sm text-center md:text-left">
          © {currentYear}
          <strong class="text-dark-400">KS Unia Toruń S.A.</strong> – Akademia Piłkarska.
          Wszystkie prawa zastrzeżone. Wykonanie: <a
            href="https://www.torweb.pl"
            class="text-dark-500 hover:text-dark-300 text-sm transition-colors"
          >
            TorWeb.pl
          </a>
        </p>
        <div class="flex items-center gap-6">
          <a
            href="/polityka-prywatnosci"
            class="text-dark-500 hover:text-dark-300 text-sm transition-colors"
          >
            Polityka prywatności
          </a>
          <button
            onclick="openCookieSettings()"
            class="text-dark-500 hover:text-dark-300 text-sm transition-colors cursor-pointer bg-transparent border-none"
          >
            Ustawienia cookies
          </button>
        </div>
      </div>
    </div>
  </div>
</footer>
